<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="11dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/Scanbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="101dp"
        android:background="@drawable/roundscanbutton"
        android:text="SCAN"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        ></Button>


    <Button
        android:id="@+id/permissionControllerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="@color/ic_launcher_app_logo_background"
        android:onClick="check"
        android:text="Permission Checker"
        android:textColor="@color/colorAccent"
        android:textSize="19sp" />

    <Button
        android:id="@+id/karma_detector_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ic_launcher_app_logo_background"
        android:text="Karma attack Detector"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="450dp"
        android:textSize="19sp"

        ></Button>
</RelativeLayout>